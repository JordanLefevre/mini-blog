{% extends 'base.html.twig' %}

{% block body %}
    <div class="row form-title"> 
        <div class="col s12">
            <h1>Nouvelle catégorie</h1>
        </div>
    </div>
    <div class="row form-content">
        <div class="col s12">
            <div class="col s12 m6 l5">
                <ul class="collection with-header">
                    <li class="collection-header"><h5>Catégories existantes</h5></li>
                    {% for existingCategory in categories %}           
                        <li class="collection-item">{{ existingCategory.name }}</li>           
                    {% endfor %}
                </ul>                
            </div>
            <div class="col s12 m6 l7">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="row">
                            <div class="input-field col s12">
                                {{ form_row(form.name) }}
                            </div>
                        </div>                    
                    </div>
                    <div class="row">
                        <div class="col s12 m6 l3">
                            <a href="{{ path('administration_category_index') }}" class="waves-effect waves-light btn red col s12">Retour</a>
                        </div>
                        <div class="col s12 m6 l3 right" id="submit">
                            <input type="submit" class="waves-effect waves-light btn col s12" value="Créer" />                        
                        </div>
                    </div>
                {{ form_end(form) }} 
            </div>
        </div>
    </div>
{% endblock %}
