{% extends 'base.html.twig' %}

{% block body %}
    <div class="row form-title"> 
        <div class="col s12">
            <h1>Article</h1>
        </div>
    </div>
    <div class="row form-content">
        <div class="col s12">
            <table class="table-show">
                <tbody>
                    <tr>
                        <th class="th-show">Id</th>
                        <td class="td-show">{{ article.id }}</td>
                    </tr>
                    <tr>
                        <th class="th-show">Titre</th>
                        <td class="td-show">{{ article.name }}</td>
                    </tr>
                    <tr>
                        <th class="th-show">Cat√©gorie</th>
                        <td class="td-show">{{ article.category.name }}</td>
                    </tr>
                    <tr>
                        <th class="th-show">Contenu</th>
                        <td class="td-show">{{ article.content | raw}}</td>
                    </tr>
                    <tr>
                        <th class="th-show">Tags</th>
                        <td class="td-show">
                            {% for tag in article.tags %}           
                                {{ tag.name }} {% if not loop.last %}, {% endif %}           
                            {% endfor %}
                        </td>
                    </tr>
                    <tr>
                        <th class="th-show">Auteur</th>
                        <td class="td-show">{{ article.author }}</td>
                    </tr>
                    <tr>
                        <th class="th-show">Date</th>
                        <td class="td-show">{% if article.publicationDate %}{{ article.publicationDate|date('d-m-Y') }}{% endif %}</td>
                    </tr>
                </tbody>
            </table>
            <div class="row" style="margin-bottom:0">
                <div class="col s12 m4 l2">
                    <a href="{{ path('administration_article_index') }}" class="waves-effect waves-light btn teal darken-3 col s12">Retour</a>
                </div>
                <div class="col s12 m8 l4 right" id="submit">   
                    <a href="{{ path('administration_article_edit', { 'id': article.id }) }}" class="waves-effect waves-light btn col s12 m6 l5 right teal darken-3">Modifier</a>            
                </div>
            </div>
            <div class="row">
                <div class="col s12 m4 l2">
                    {{ form_start(delete_form) }}
                        <input type="submit" class="waves-effect waves-light btn col s12 red" value="Supprimer">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
