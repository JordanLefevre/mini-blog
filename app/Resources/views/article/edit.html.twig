{% extends 'base.html.twig' %}

{% block body %}
    <div class="row form-title"> 
        <div class="col s12">
            <h1>Ã‰dition article</h1>
        </div>
    </div>
    <div class="row form-content">
        <div class="col s12">
            {{ form_start(edit_form) }}
                <div class="row">
                    <div class="row">
                        <div class="input-field col s10 offset-s1">
                            {{ form_row(edit_form.name) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s10 offset-s1">
                            <div class="row" id="content-label">
                                {{ form_label(edit_form.content) }}
                            </div>
                            <div class="row">
                                {{ form_widget(edit_form.content) }}
                                {{ form_errors(edit_form.content) }}
                            </div>                        
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s10 offset-s1">
                            {{ form_row(edit_form.author) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s10 offset-s1">
                            {{ form_widget(edit_form.category) }}
                            {{ form_errors(edit_form.category) }}
                            {{ form_label(edit_form.category) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s10 offset-s1">
                            {{ form_widget(edit_form.tags) }}
                            {{ form_errors(edit_form.tags) }}
                            {{ form_label(edit_form.tags) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s10 offset-s1">
                            {{ form_label(edit_form.publicationDate) }}
                            {{ form_widget(edit_form.publicationDate) }}
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:0">
                    <div class="col s12 m4 l2">
                        <a href="{{ path('administration_article_index') }}" class="waves-effect waves-light btn teal darken-3 col s12">Retour</a>
                    </div>
                    <div class="col s12 m8 l4 right" id="submit">   
                        <input type="submit" class="waves-effect waves-light btn col s12 m6 l5 right" value="Modifier" />               
                    </div>
                </div>
            {{ form_end(edit_form) }} 
            <div class="row">
                <div class="col s12 m4 l2">
                    {{ form_start(delete_form) }}
                        <input type="submit" class="waves-effect waves-light btn col s12 red" value="Supprimer">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
   {{ tinymce_init() }}
{% endblock %}
